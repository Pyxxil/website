{% extends "base" %}

{% block meta %}
<meta name="description" content="This is where I keep my thoughts about a whole bunch of stuff, sometimes it's useful information" />

<link rel="canonical" href="https://www.pyxxilated.studio/blog">
{% endblock %}

{% block title %}
<h1 class="title">Blog</h1>
{% endblock %}

{% block content %} {% for post in posts %}
<div class="blog-post">
  <h3>
    <a href="/blog/{{ post.id }}">{{ post.title }}</a>
  </h3>
  <span style="font-style: italic">
    Reading time (mins): {{ post.reading_time }}
  </span>
  <br>
  <p>
    {{ post.summary }}
  </p>
</div>
{% endfor %}

<div>
  {% if page.has_previous %}
  <a href="{{ page.previous }}">
    Previous
  </a>
  {% endif %} {% if page.has_next %}
  <a href="{{ page.next }}">
    Next
  </a>
  {% endif %}
</div>
{% endblock %}
